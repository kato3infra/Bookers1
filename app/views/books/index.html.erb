<div class="index-box">
  <div class="index-list-header">
    <h1>Books</h1>
  </div>

  <table border="1">
    <tr>
      <th>
        <p>title</p>  
      </th>
      <th>
        <p>body</p>
      </th>
    </tr>

    <% @books.each do |book| %>
      <tr>
        <td>
          <span><%= book.title %></span>
        </td>
        <td>
          <span><%= book.body %></span>
        </td>
        <td>
          <%= link_to "Show", "/books/#{book.id}" %>
        </td>
        <td>
          <%= link_to "Edit", "/books/#{book.id}/edit" %>
        </td>
        <td>
          <%= button_to "Destroy", "/books/#{book.id}", method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </table>
<div>

<h3>New book</h3>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>
